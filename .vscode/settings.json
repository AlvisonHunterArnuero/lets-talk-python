{
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length",
    "120"
  ],
  "editor.formatOnSave": true,
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [
      79,
      120
    ],
    "editor.defaultFormatter": "ms-python.autopep8"
  }
}